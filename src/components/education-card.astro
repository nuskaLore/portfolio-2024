---
import CalendarIcon from "./icons/calendar-icon.astro";
import HighschoolIcon from "./icons/highschool-icon.astro";

interface Props {
  subtitle: string;
  title: string;
  duration: string;
  description: string;
  href: string;
}

const { subtitle, title, duration, description, href } = Astro.props;
---

<article
  class="flex flex-col gap-4 rounded-lg bg-gradient-to-t from-neutral-900/40 via-75% px-4 py-8"
>
  <div class="flex items-center gap-2 text-neutral-700">
    <HighschoolIcon width={24} height={24} />
    <div class="h-[2px] w-full rounded-full bg-neutral-700"></div>
  </div>
  <header class="flex flex-col gap-1">
    <p class="font-jetbrains text-xs uppercase leading-[1] text-purple-500">
      {subtitle}
    </p>
    <h3 class="text-2xl font-bold leading-[1] tracking-tight">
      {title}
    </h3>
  </header>
  <div class="flex items-center gap-1 text-neutral-700">
    <CalendarIcon width={18} height={18} />
    <p class="font-jetbrains text-sm font-bold leading-[1] tracking-tight">
      {duration}
    </p>
  </div>
  <p class="text-pretty text-sm text-neutral-400">
    {description}
  </p>
  <footer class="pt-8">
    <a
      target="_blank"
      href={href}
      class="group flex w-fit gap-1 font-jetbrains"
    >
      <span aria-hidden="true" class="text-purple-500">[</span>
      <span
        class="flex items-center gap-1 underline-offset-2 group-hover:underline"
      >
        Visit Page
      </span>
      <span aria-hidden="true" class="text-purple-500">]</span>
    </a>
  </footer>
</article>
